<section>
    <div class="container">
        <table class="mt-5">
            <thead>
                <tr>
                    <th class="p-5">Item</th>
                    <th class="p-5">Title</th>
                    <th class="p-5">Quantity</th>
                </tr>
            </thead>
            <tbody>

                {{#each products}}
                <tr>
                    
                    <td><img style="width: 70px;" src="/product-images/{{this.product._id}}.jpg" alt=""></td>
                    <td>{{this.product.Name}}</td>
                    
                    <td>
                        <button class="cart-item-count mr-3" onclick="changeQuantity('{{this._id}}','{{this.product._id}},-1')">-</button>{{this.quantity}}<button class="cart-item-count ml-3" onclick="changeQuantity('{{this._id}}','{{this.product._id}},1')">+</button>
                    </td>
                    <td>
                        <a href="" class="btn btn-danger">Remove</a>
                    </td>
                </tr>
                {{/each}}

            </tbody>
        </table>
    </div>
</section>

<script>
    function changeQuantity(cartId,proId,count){
        $.ajax({
            url:'/change-product-quantity',
            data::{
                cart:cartId,
                product:proId,
                count:count
            },
            method:'post',
            success:(response)=>{
                alert(response)
            }
        })
    }
</script>