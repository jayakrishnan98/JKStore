<section>
    <div class="container">
        <table class="mt-5">
            <thead>
                <tr>
                    <th class="p-5">Item</th>
                    <th class="p-5">Title</th>
                    <th class="p-5">Quantity</th>
                </tr>
            </thead>
            <tbody>

                {{#each products}}
                <tr>
                    <td><img style="width: 70px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
                    <td>{{this.Name}}</td>
                    <td>
                        <button class="cart-item-count mr-3">-</button>1<button class="cart-item-count mr-3">+</button>
                    </td>
                    <td>
                        <a href="" class="btn btn-danger">Remove</a>
                    </td>
                </tr>
                {{/each}}
                
            </tbody>
        </table>
    </div>
</section>